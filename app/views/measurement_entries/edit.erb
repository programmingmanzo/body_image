<h1>Update</h1>

<form class="" action="/measurement_entries/<%= @measurement_entry.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <label for="weight">Weight(lbs):</label>
    <input type="text" name="weight" value ="<%= @measurement_entry.weight %>" required><br>
    <label for="waist">Waist(in):</label>
    <input type="text" name="waist" value ="<%= @measurement_entry.waist %>" required><br>
    <label for="hips">Hips(in):</label>
    <input type="text" name="hips" value ="<%= @measurement_entry.hips %>" required><br>
    <label for="right_arm">Right Arm(in):</label>
    <input type="text" name="right_arm" value ="<%= @measurement_entry.right_arm %>" required><br>
    <label for="left_arm">Left Arm(in):</label>
    <input type="text" name="left_arm" value ="<%= @measurement_entry.left_arm %>" required><br>
    <label for="right_arm">Right Arm(in):</label>
    <input type="text" name="right_thigh" value ="<%= @measurement_entry.right_thigh %>" required><br>
    <label for="left_arm">Left Arm(in):</label>
    <input type="text" name="left_thigh" value ="<%= @measurement_entry.left_thigh %>" required><br>
    <input type="submit" name="" value="Update Entry">
</form>
